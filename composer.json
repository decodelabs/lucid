{
    "name": "decodelabs/lucid",
    "description": "Flexible and expansive sanitisation and validation framework",
    "type": "library",
    "keywords": [ "validation", "sanitisation", "input" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "repositories": {
    },
    "require": {
        "php": "^8.4",

        "decodelabs/archetype": "^0.3.8",
        "decodelabs/coercion": "^0.3",
        "decodelabs/dictum": "^0.6.9",
        "decodelabs/exceptional": "^0.5.2",
        "decodelabs/lucid-support": "^0.5.1",
        "decodelabs/veneer": "^0.12.2",

        "nesbot/carbon": "^2|^3"
    },
    "require-dev": {
        "decodelabs/compass": "^0.3",
        "decodelabs/phpstan-decodelabs": "^0.7",
        "decodelabs/spectrum": "^0.3.1"
    },
    "suggest": {
        "decodelabs/compass": "IP address validation support",
        "decodelabs/spectrum": "Color validation support"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Lucid\\": "src/Lucid",
            "DecodeLabs\\PHPStan\\Lucid\\": "src/PHPStan"
        },
        "files": [
            "src/Lucid/Context.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.5.x-dev"
        },
        "effigy": {
            "exports": [
                "phpstan-extension.neon"
            ]
        },
        "phpstan": {
            "includes": [
                "phpstan-extension.neon"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
